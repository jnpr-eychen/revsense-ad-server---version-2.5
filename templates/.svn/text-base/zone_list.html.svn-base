<!-- BEGIN: main -->
<p><i>@@Zones define ad rates, sizes and serving options.@@</i></p>
<table width=100% border=0 cellpadding=8 style="background-color: #EEE; border-bottom: 1px dotted #999;">
<tr>
	<td width=1>Date:</td>
	<form method=GET>
	<td width=1>
		<select name="dates" onChange="submit();">
		{MDATES}
		</select>
		<input type="hidden" name="section" value="zone" />
	</td>
	<td width=1><input type=submit value="Go" /></td>
	</form>

	<Td width="70%">&nbsp;</td>

	<Form method=GET>
	<td width=1>@@Create@@&nbsp;@@Zone@@:</td>
	<td width=1>
		<select name=f[zone_style]> 
			<option value=0>-- @@Select Template@@ --</option>
			{ZONE_STYLE}
		</select><br>
	</td>
	<td width=1><input type=submit value="Create" /></td>
	<input type=hidden name=section value=zone>
	<input type=hidden name=action value=zone_new>
	</form>
</tr>
</table>

<br/>

<table width=100% class="xtable">
<tr>
	<th>@@Name@@</th>
	<th>@@Type@@</th>
	<th align=right width=1>@@Rate@@</th>
	<th>@@Template@@</th>
	<th align=right bgcolor="#99999">@@Clicks@@</th>
	<th align=right bgcolor="#99999">@@Views@@</th>
	<th align=right bgcolor="#99999">@@Earned@@</th>
	<th>@@Status@@</th>	
	<th align=right width=1>@@Ads@@</font></th>
	<th width=1>&nbsp;</th>
</tr>
<!-- BEGIN: list -->
<tr bgcolor="{BGCOLOR}">
	<td><a href=?section=zone&action=zone_define&f[id]={ID}>{NAME}</a></td>
	<td>{RATE_TYPE}</td>
	<td align=right width=1>@@$@@{RATE}</font></td>
	<td>{STYLE}</td>	
	<td align=right>{CLICKS}</font></td>
	<td align=right>{IMPRESSIONS}</font></td>
	<td align=right>{AMOUNT}</font></td>
	<td>{STATUS}</td>
	<td align=right width=1><a href="?section=zone&action=zone_ads&f[id]={ID}" title="@@View pending and active ads for@@ {NAME}"><font color=red>{PENDING_ADS}</font>/<font color=green>{ADS}</font></a></font></td>
	<td width=1><a href="?section=zone&action=zone_delete&f[id]={ID}" onclick="javascript:return confirm('@@Are you sure you want to delete@@ {NAME} ?\n\r@@All ads in this zone will be deleted as well@@.')"><img src="images/stock_delete-16.png" border=0></a></td>
</tr>
<!-- END: list -->
<!-- BEGIN: totals -->
<tr bgcolor="#EEEEEE">
	<td align=right colspan=4><b>TOTALS:</b></td>
	<td align=right><b>{TOTAL_CLICKS}</b></td>
	<td align=right><b>{TOTAL_IMPRESSIONS}</b></td>
	<td align=right><b>{TOTAL_AMOUNT}</b></td>
	<td>&nbsp;</td>
	<td align=right><b>{TOTAL_ADS}</b></td>
	<td>&nbsp;</td>
</tr>
<!-- END: totals -->
</table>
<!-- END: main -->
